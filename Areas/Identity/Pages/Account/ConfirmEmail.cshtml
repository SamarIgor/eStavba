@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
}

<style>
    body {
        background-color: #f2f2f2;
        background: url('https://img.freepik.com/premium-photo/abstract-white-interior-highlights-future-architectural-background-3d-illustration-rendering_689904-142276.jpg') no-repeat center center fixed;
        background-size: cover;
        display: flex;
        flex-direction: column;
        color: #000000; 
        text-align: center;
    }
</style>

<div class="login-container center-page">
    <div id="account">
        <div class="text-container">
            <h1 class="heading">@ViewData["Title"]</h1>
            <p class="heading2" style="color: #242424">
                Thank you for confirming your email. You can now <a href="/Identity/Account/Login" 
                style="color: #1a73e8; text-decoration: underline;">log in</a> to your account.
            </p>
        </div>
    </div>
</div>