@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}

<style>
    body {
        background-color: #f2f2f2;
        background: url('https://img.freepik.com/premium-photo/abstract-white-interior-highlights-future-architectural-background-3d-illustration-rendering_689904-142276.jpg') no-repeat center center fixed;
        background-size: cover;
        display: flex;
        flex-direction: column;
        color: #000000; 
    }
</style>

<style>
    #account {
        max-width: 500px;
    }

    .form-container {
        margin-bottom: 20px;
    }

    .form-floating {
        margin-bottom: 15px;
    }

    .button-container {
        margin-top: 20px;
        margin-bottom: 20px;
    }

    .external-login-container {
        margin-top: 20px;
    }
</style>

<div class="login-container">
    <div id="account">
        <div class="text-container">
            <h1 class="heading">@ViewData["Title"]</h1>
        </div>
        <div class="row">
            <div class="col-md-12">
                <section class="form">
                    <form method="post">
                        <h2 class="heading2">Enter your email.</h2>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-floating">
                            <input asp-for="Input.Email" class="reply-textfield" autocomplete="username" aria-required="true" placeholder="Enter mail here" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="centered" style="margin-top: 40px;">
                            <button type="submit" class="create-button">Resend</button>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
