@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style>
    body {
        background-color: #f2f2f2;
        background: url('https://img.freepik.com/premium-photo/abstract-white-interior-highlights-future-architectural-background-3d-illustration-rendering_689904-142276.jpg') no-repeat center center fixed;
        background-size: cover;
        display: flex;
        flex-direction: column;
        color: #000000; 
        text-align: center;
    }
    
    .col-12 {
        display: flex;
        justify-content: space-between;
        gap: 20px; 
    }

    .col-6 {
        flex: 1; 
    }
</style>

<div class="center-page">
    <div class="login-container" style="min-width: 750px;">
        <div id="registerForm">
            <h1 class="heading">@ViewData["Title"]</h1>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form">
                <div class="col-12">
                    <div class="col-6">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating">
                            <input asp-for="Input.FirstName" class="reply-textfield" autocomplete="firstName" aria-required="true" placeholder="Name" />
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Input.UserName" class="reply-textfield" autocomplete="off" aria-required="true" placeholder="Username" />
                            <span asp-validation-for="Input.UserName" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Input.Password" class="reply-textfield" autocomplete="new-password" aria-required="true" placeholder="Password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        
                    </div>
                    <div class="col-6">
                         <div class="form-floating">
                            <input asp-for="Input.LastName" class="reply-textfield" autocomplete="lastname" aria-required="true" placeholder="Surname" />
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Input.Email" class="reply-textfield" autocomplete="email" aria-required="true" placeholder="Email" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Input.ConfirmPassword" class="reply-textfield" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="centered" style="margin-top: 25px;">
                    <button type="submit" class="create-button">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
