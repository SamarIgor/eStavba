@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="login-container centered" style="width: 500px;">
    <h3 class="heading3">Manage your account</h3>
    <h4 class="heading4" style="margin-bottom: -25px;">@ViewData["Title"]</h4>
    <partial name="_StatusMessage" for="StatusMessage" />
    <form class="form" id="profile-form" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating" style="width: 300px;">
            <input asp-for="Username" class="reply-textfield" placeholder="Username" disabled />
        </div>
        <div class="form-floating" style="width: 300px;">
            <input asp-for="Input.PhoneNumber" class="reply-textfield" placeholder="Phone Number" />
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
        </div>
        <button id="update-profile-button" type="submit" class="create-button" style="margin-top: 25px;">Save</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
