@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete your Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="login-container centered" style="min-width: 600px;">
    <h3 class="heading3">@ViewData["Title"]</h3>
    <p class="created-on" style="font-weight: bold; color: red">Deleting this data will permanently remove your account, and this cannot be recovered.</p>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-floating">
                <input asp-for="Input.Password" class="reply-textfield" autocomplete="current-password" placeholder="Password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="delete-button" style="margin-top: 40px;" type="submit">Delete data and close my account</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
