@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<div class="reset-container center-page">
    <h1 class="heading">@ViewData["Title"]</h1>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Input.Code" type="hidden" />
        <div class="form-floating">
            <input asp-for="Input.Email" class="reset-textfield" autocomplete="username" placeholder="Email" aria-required="true" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Input.Password" class="reset-textfield" autocomplete="new-password" placeholder="New Password" aria-required="true" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Input.ConfirmPassword" class="reset-textfield" autocomplete="new-password" placeholder="Confirm Password" aria-required="true" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <div style="margin-top: 25px;">
            <button type="submit" class="create-button">Reset</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
