@model List<ReportProblemModel>

@{
    ViewData["Title"] = "Reported Problems";
}

<style>
    body {
        background-color: #f2f2f2;
        background: url('https://img.freepik.com/premium-photo/abstract-white-minimalistic-architectural-interior-with-window-3d-illustration-rendering_689904-5387.jpg?size=626&ext=jpg&ga=GA1.1.1826414947.1699747200&semt=ais') no-repeat center center fixed;
        background-size: cover;
        margin: 0;
        display: flex;
        flex-direction: column;
        color: #000000;
        text-align: center;
    }
</style>

<h2 style="text-align: center;" class="heading">Reported Problems</h2>
<br />

@foreach (var problem in Model)
{
    <div class="bubble-container" style="text-align: left;">
        <div class="title-container">
            <h3><strong>@($"{problem.FirstName} {problem.LastName}")</strong></h3>
            <a class="bin-button" href="@Url.Action("Delete", "ReportProblem", new { id = problem.Id })">
                <svg class="bin-top"
                    viewBox="0 0 39 7"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg">
                    <line y1="5" x2="39" y2="5" stroke="white" stroke-width="4"></line>
                    <line x1="12"
                        y1="1.5"
                        x2="26.0357"
                        y2="1.5"
                        stroke="white"
                        stroke-width="3"></line>
                </svg>
                <svg class="bin-bottom"
                    viewBox="0 0 33 39"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg">
                    <mask id="path-1-inside-1_8_19" fill="white">
                        <path d="M0 0H33V35C33 37.2091 31.2091 39 29 39H4C1.79086 39 0 37.2091 0 35V0Z"></path>
                    </mask>
                    <path d="M0 0H33H0ZM37 35C37 39.4183 33.4183 43 29 43H4C-0.418278 43 -4 39.4183 -4 35H4H29H37ZM4 43C-0.418278 43 -4 39.4183 -4 35V0H4V35V43ZM37 0V35C37 39.4183 33.4183 43 29 43V35V0H37Z"
                        fill="white"
                        mask="url(#path-1-inside-1_8_19)"></path>
                    <path d="M12 6L12 29" stroke="white" stroke-width="4"></path>
                    <path d="M21 6V29" stroke="white" stroke-width="4"></path>
                </svg>
            </a>
        </div>
        <p><strong>Email:</strong> @problem.Email</p>
        <p><strong>Phone Number:</strong> @problem.PhoneNumber</p>
        <p><strong>Apartment Number:</strong> @problem.ApartmentNumber</p>
        <p><strong>Problem Description:</strong> @problem.ProblemDescription</p>
    </div>
}
<br />
<br />

