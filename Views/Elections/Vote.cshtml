<h2>Vote for a new Admin"></a></h2>
<form method="post" asp-action="SubmitVote">
    <div class="form-group">
        <label for="candidate">Choose a candidate:</label>
        <select id="candidate" name="candidateId" class="form-control">
            @foreach (var candidate in ViewBag.Candidates)
            {
                <option value="@candidate.Id">@candidate.UserName</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-success">Vote</button>
</form>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}
