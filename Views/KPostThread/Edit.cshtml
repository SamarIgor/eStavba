@model ForumThreadModel

@{
    ViewData["Title"] = "Edit Thread";
}

<style>
    body {
        background-color: #f2f2f2;
        background: url('https://img.freepik.com/premium-photo/white-background-with-white-background-black-text-that-says-white_689904-124037.jpg?w=740') no-repeat center center fixed;
        background-size: cover;
        margin: 0;
        display: flex;
        flex-direction: column;
        color: #000000;
        text-align: center;
    }
</style>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div class="center-page" style="min-width: 500px;">
        <div class="login-container">
            <h2 class="heading">Edit Thread</h2>
            <div>
                <input asp-for="Title" placeholder="Title" class="reply-textfield" />
                <span asp-validation-for="Title"></span>
            </div>
            <div>
                <textarea asp-for="Content" placeholder="Content" class="reply-textfield"></textarea>
                <span asp-validation-for="Content"></span>
            </div>
            <div class="centered" style="margin-top: 25px;">
                <button type="submit" class="create-button">Save Changes</button>
            </div>
        </div>
    </div>
</form>